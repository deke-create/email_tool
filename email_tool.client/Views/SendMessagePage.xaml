<Page x:Class="email_tool.client.Views.SendMessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Send Message">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="400">
            <TextBlock Text="Sender" Margin="0,0,0,5" />
            <TextBox x:Name="SenderTextBox" Margin="0,10" />
            
            <TextBlock Text="Recipient" Margin="0,0,0,5" />
            <TextBox x:Name="RecipientTextBox" Margin="0,10" />
            
            <TextBlock Text="Subject" Margin="0,0,0,5" />
            <TextBox x:Name="SubjectTextBox" Margin="0,10" />
            
            <TextBlock Text="Body" Margin="0,0,0,5" />
            <TextBox x:Name="BodyTextBox" Margin="0,10" AcceptsReturn="True" Height="100" />
            
            <Button Content="Send" Click="OnSendClick" Margin="0,10" />
            <TextBlock x:Name="StatusTextBlock" Foreground="Green" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Page>
