<Page x:Class="email_tool.client.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <TextBlock Text="Username" Margin="0,0,0,5" />
            <TextBox x:Name="UsernameTextBox" Margin="0,10" />
            
            <TextBlock Text="Password" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordBox" Margin="0,10" />
            
            <Button Content="Login" Click="OnLoginClick" Margin="0,10" />
            <TextBlock x:Name="ErrorTextBlock" Foreground="Red" Visibility="Collapsed" />
        </StackPanel>
    </Grid>
</Page>
